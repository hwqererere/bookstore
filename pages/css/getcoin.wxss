
.getcoin{position:fixed;width:100%;height:100%;left:0rpx;top:0rpx;z-index:0;}
.getcoin .toptitle{width:100%;float:left;height:50rpx;line-height: 50rpx;font-size: 32rpx;text-align: center;color:#ffffff}
.getcoin .coinline{float:left;text-align: center; height:50rpx;line-height:50rpx;font-size:32rpx;width:100%;color:#ffffff;margin:20rpx 0rpx;}
.getcoin .coinline .coin{display: inline-block;height:50rpx;background:url(https://res.doumai.com/mxdzz/coin.png) left center no-repeat;background-size:auto 70%;padding-left:40rpx;}
.getcoin .coinline .coin text{float:right;color:#ffffff;line-height:50rpx;}
.getcoin .coinline .add{float:right;width:50rpx;height:50rpx;background:url(https://res.doumai.com/mxdzz/add.png) center center no-repeat;background-size:auto 70%;}
.getcoin .signbut{width:182rpx;height:60rpx;line-height:60rpx;float:left;margin-left:calc(50% - 91rpx);background-color:#ffffff;border-radius:30rpx;font-size:32rpx;text-align: center;color:#472464;}
.getcoin .signbut.havesign{background-color:#ff3354;color:#ffffff}
.getcoin .daylist{width:660rpx;margin-left:calc(50% - 330rpx);float:left;height:62rpx;padding:20rpx 0rpx;}
.getcoin .daylist .dli{float:left;margin-left:22rpx;position:relative;height:62rpx;width:74rpx}
.getcoin .daylist .dli:nth-child(1){margin-left:0rpx;}
.getcoin .daylist .dli .dlisign{position:absolute;left:0rpx;top:0rpx;width:74rpx;height:62rpx;background:url(https://res.doumai.com/mxdzz/sign.png) center center no-repeat;background-size:auto 90%;}
.getcoin .daylist .dli text{color:#ffffff;font-size:24rpx;width:100%;float:left;text-align: center;}
.getcoin .sharebut{width:660rpx;height:90rpx;float:left;margin-left:calc(50% - 330rpx);color:#ffffff;font-weight:bold;font-size:36rpx;border-radius:10rpx;text-align: center;line-height:90rpx;background: -webkit-linear-gradient(#ff4c31, #f53759);background: linear-gradient(#ff4c31, #f53759);}
.getcoin .friendbox{width:660rpx;float:left;margin-left:calc(50% - 330rpx);height:630rpx;border-radius: 20rpx;margin-top:20rpx;}
.getcoin .friendbox .boxtitle{float:left;width:100%;margin-top:38rpx;height:36rpx;}
.getcoin .friendbox .boxtitle text{height:36rpx;line-height:36rpx;font-size:26rpx;color:#ffffff;float:left;}
.getcoin .friendbox .boxtitle text:nth-child(1){margin-left:24rpx;background:url(https://res.doumai.com/mxdzz/coin.png) right center no-repeat;background-size:auto 95%;padding-right:36rpx}
.getcoin .friendbox .boxfoot{float:left;width:100%;height:36rpx;font-size:26rpx;line-height: 36rpx;color:#ffffff;text-align: center;}
.getcoin .friendbox .boxfoot font{color:#fad930;padding-left:5rpx;padding-right:5rpx}
.getcoin .friendbox .boxtitle .reflash{float:right;background:url(https://res.doumai.com/mxdzz/reflash.png) center center no-repeat;background-size:90% 90%;height:36rpx;width:36rpx;margin-right:20rpx;}

.getcoin .relation-box{float:left;width:100%;height:500rpx;margin-top:20rpx;}
.getcoin .relation-box image{float:left;width:62rpx;height:62rpx;border-radius:31rpx;}
.getcoin .relation-box .nullimage{float:left;width:62rpx;height:62rpx;border-radius:31rpx;margin-left:25rpx;margin-bottom:16rpx;color:#ffffff;font-size:40rpx;line-height:62rpx;text-align: center;background-color:#606060}
.getcoin .relation-box .nullimage.none:after{content:"?";}
.getcoin .relation-box .nullimage:nth-child(7n+1){margin-left:45rpx;}