
.rank{position:fixed;width:100%;height:100%;left:0rpx;top:0rpx;background:url(https://res.doumai.com/mxdzz/indexbg.jpg) center center no-repeat;background-size:100% 100%;z-index:0;}
.rank .ranktitle{float:left;width:676rpx;height:94rpx;border-radius:47rpx;background:#472464;margin-left:calc(50% - 338rpx);}
.rank .ranktitle view{float:left;width:300rpx;height:76rpx;border-radius:38rpx;margin-top:9rpx;text-align: center;color:#ffffff;font-size:28rpx;line-height:76rpx}
.rank .ranktitle view:nth-child(1){margin-left:38rpx}
.rank .ranktitle view.curr{background:#fe3559}
.rank .rankbox{position:fixed;top:108rpx;bottom:226rpx;width:676rpx;left:calc(50% - 338rpx);border-radius: 16rpx;z-index: 1;background-color:#472464}
.rank .rankbox .list{height:96rpx;float:left;width:100%;border-bottom:1rpx solid #42235f}
.rank .rankbox .list view{float:left;height:96rpx;line-height:96rpx;}
.rank .rankbox .list view:nth-child(1){width:124rpx;text-align: center;color:#ffffff}
.rank .rankbox .list view:nth-child(2){width:70rpx;}
.rank .rankbox .list view:nth-child(2) image{width:70rpx;height:70rpx;margin-top:13rpx;border-radius:35rpx;}
.rank .rankbox .list view:nth-child(3){width:270rpx;white-space:nowrap;text-overflow: ellipsis;text-align: left;color:#ffffff;font-size:26rpx;text-indent:10rpx;}
.rank .rankbox .list view:nth-child(4){width:155rpx;text-align: center;font-size:26rpx;color:#ffffff}
.rank .rankbox .list font{color:#fd8000}
.rank .invate{width:540rpx;height:90rpx;background:#fe3b49;color:#ffffff;position: fixed;z-index: 1;left:calc(50% - 270rpx);bottom:110rpx;border-radius:45rpx;line-height:90rpx;text-align: center;font-size:32rpx}